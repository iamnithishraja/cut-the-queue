{
	"name": "cut-the-queue",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"typecheck": "bun run --filter=* typecheck",
		"build": "bun run --filter=http --filter=reporter --filter=consumers build",
		"dev": "bun run --filter={http,reporter,consumers} dev",
		"dev:http": "bun run --filter=http dev",

		"dev:reporter": "bun run --filter=reporter dev",
		"dev:consumers": "bun run --filter=consumers dev",
		"test": "bun run --filter=* test",
		"lint": "bun run --filter=* lint",
		"prisma:generate": "bun run --filter=@repo/db prisma:generate",
		"prisma:studio": "bun run --filter=@repo/db studio",
		"seed": "bun run --filter=@repo/db seed",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"start": "bun run --filter={http,reporter,consumers} start"
	},
	"devDependencies": {
		"prettier": "^3.2.5",
		"@types/node": "^22.7.5",
		"@types/dotenv": "^6.1.1",
		"prisma": "^6.3.1"
	},
	"engines": {
		"bun": ">=1.0.0"
	},
	"packageManager": "bun@1.0.25",
	"dependencies": {
		"dotenv": "^16.4.5",
		"zod": "^3.23.8"
	}
}
