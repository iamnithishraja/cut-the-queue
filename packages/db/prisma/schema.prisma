generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String    @id @default(cuid())
  firstName          String
  lastName           String
  userProfile        String?
  email              String    @unique
  phoneNumber        String    @unique
  isVerified         Boolean   @default(false)
  canteenId          String?
  canteen            Canteen?  @relation(fields: [canteenId], references: [id], onDelete: SetNull)
  resetPasswordToken String?
  expire             DateTime?
  otp                String?
  fcmToken           String?
  password           String? // nullable for Google auth users
  googleId           String?   @unique // for Google auth users
  role               UserRole  @default(USER)
  orders             Order[] // relation to orders

  @@index([id])
  @@map("users")
}

model Canteen {
  id           String     @id @default(cuid())
  name         String
  canteenImage String?
  isOpen       Boolean    @default(true)
  menuItems    MenuItem[]
  password     String
  orders       Order[]
  users        User[]

  @@index([id])
  @@map("canteens")
}

model MenuItem {
  id            String             @id @default(cuid())
  type          MenuItemType       @default(TimeConsuming)
  name          String
  description   String?
  itemImage     String?
  price         Float
  isVegetarian  Boolean            @default(true)
  avilableLimit Int?
  category      String
  status        AvailabilityStatus @default(AVAILABLE)
  canteen       Canteen            @relation(fields: [canteenId], references: [id], onDelete: Cascade)
  canteenId     String
  orders        Order[]
  OrderItem     OrderItem[]

  @@index([id])
  @@index([canteenId])
  @@map("menu_items")
}

model OrderItem {
  id         String          @id @default(cuid())
  menuItem   MenuItem        @relation(fields: [menuItemId], references: [id], onDelete: Restrict)
  menuItemId String
  quantity   Int
  status     OrderItemStatus @default(WAITING_FOR_PICKUP)
  orderId    String
  order      Order           @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([menuItemId])
  @@index([orderId])
}

model Order {
  id           String      @id @default(cuid())
  customer     User?       @relation(fields: [userId], references: [id], onDelete: SetNull) // Made optional with SetNull
  userId       String?     // Made optional
  orderStatus  OrderStatus @default(PROCESSING)
  canteen      Canteen     @relation(fields: [canteenId], references: [id], onDelete: Restrict)
  canteenId    String
  isPaid       Boolean     @default(false)
  paymentId    String?
  paymentToken String
  createdAt    DateTime    @default(now())
  MenuItem     MenuItem?   @relation(fields: [menuItemId], references: [id], onDelete: SetNull)
  menuItemId   String?
  OrderItem    OrderItem[]

  @@index([id])
  @@index([userId])
  @@index([canteenId])
  @@map("orders")
}

enum OrderItemStatus {
  COOKING
  WAITING_FOR_PICKUP
  SENT
}

enum OrderStatus {
  PROCESSING
  DONE
}

enum AvailabilityStatus {
  AVAILABLE
  UNAVAILABLE
}

enum UserRole {
  USER
  PARTNER
  ADMIN
}

enum MenuItemType {
  Instant
  TimeConsuming
}
